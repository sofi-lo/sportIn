{% extends 'parent.html.twig' %}
{% block monheader %}{% endblock %}
{% block title %}Profil
{% endblock %}


	
{% block navMembre %}
		<!-- navigation header -->
		<a href=""><img class="profil_menus" src="{{ asset('uploads/svg/menu.svg') }}" alt="symbol_menus"></a>
		<nav class="profil_menu">
			<a href="{{ path('index') }}"><img class="profil_menu__logo" src="{{ asset('uploads/images/logo.png') }}" alt="Logo"></a>
			<ul>
				<li>
					<a href="{{ path('blogs') }}">Blog</a>
				</li>
				<li>
					<a href="{{ path('faq') }}">Faq</a>
				</li>
				<li>
					<a href="">Rechercher</a>
				</li>
				
				<li><a href="#"><img class="profil_menu__logos" src="{{ asset('uploads/svg/notification.svg') }}" alt="symbol_notification"></a></li>
				<li>
					<a href="#"><img class="profil_menu__logos" src="{{ asset('uploads/svg/profil.svg') }}" alt="symbol-profil"></a>
				</li>
			</ul>
		</nav>
		<!-- fin navigation header-->
		
		<!-- début banniere -->
		<div class="profil_banniere">
			<img class="profil_diapo__banniere" src="{{ asset('../uploads/images/banniere_profil.jpg') }}" alt="photo-fond">
			<div class="profil_description">
				<img class="profil_diapo__profil" src="{{ asset('../uploads/images/profil1.jpg') }}" alt="photo-profil">

				<div class="profil_texte__profil">
					<h2 class="pseudo">
						{{ app.user.username }}</h2>
					<p>{{ app.user.birthDate|date('Y ') }}</p>
					<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quos numquam quidem beatae, sed deserunt non maiores fugit enim dolorum.</p>
					{# <p>En sport, tout demande de la détermination. Les trois D : Détermination, Disponibilité, Discipline ; et la réussite est à portée de main.Philip Roth</p> #}
				</div>
				<!-- texte_profil -->
			</div>
			<!-- fin description -->
		</div>
		<!-- fin bannière -->
	
		<!--nav_banniere  -->
		<nav class="profil_nav__banniere">
			<div>
				<a href="{{ path('user_new') }}">profil</a>
				<a href="{{ path('amis') }}">amis</a>
				<a href="{{ path('defis') }}">défis réalisés</a>
				<a href="{{ path('membre') }}">événements participés</a>
			</div>
			<div>
				<a href="{{ path('partager') }}"><img class="profil_symbol__partager" src="{{ asset('uploads/svg/share.svg') }}" alt="symbol_partager"></a>
				<a href="{{ path('partager') }}">partager</a>
			</div>
		</nav>
		<!-- fin nav_banniere -->
{% endblock %}
	
	
	
	{% block bodyMembre %}
	<main class="profil_detail">
		<section>
			<!-- à propos..  -->
			<article>
				<h2 class="profil_h2">à propos de moi</h2>
				<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut pretium pretium tempor. Ut eget imperdiet neque. In volutpat
				</p>
				<p>{{ app.user.description }}</p>
			</article>
			<!--fin à propos  -->

			<!-- sport.. -->
			<article>
				<h2 class="profil_h2">sports favoris</h2>
				<ul id="profil_symbol">
					<div class="profil_li">
						<li><img class="profil_symbol__sport" src="{{ asset('uploads/svg/basket.svg') }}" alt="symbol_basket">Basket</li>
					</div>
					<div class="profil_li">
						<li><img class="profil_symbol__sport" src="{{ asset('uploads/svg/tennis.svg') }}" alt="symbol_tennis">
							Tennis</li>
					</div>
					<div class="profil_li">
						<li><img class="profil_symbol__sport" src="{{ asset('uploads/svg/football.svg') }}" alt="symbol_football">Football</li>
					</div>
					<div class="profil_li">
						<li><img class="profil_symbol__sport" src="{{ asset('uploads/svg/muscu.svg') }}" alt="symbol_musculation">Musculation</li>
					</div>
					<div class="profil_li">
						<li><img class="profil_symbol__sport" src="{{ asset('uploads/svg/running.svg') }}" alt="symbol_running">running</li>
					</div>
					<div class="profil_li">
						<li>Plongée sous-marine</li>
					</div>
				</ul>
			</article>
			<!-- fin sport -->

			<!-- défis -->
			<article>
				<div>
					<h2 class="profil_h2">Défis en cours
						{{ app.user.nbEvents }}
					</h2>
				</div>
				<div class="profil_defis">
					<div>
						<h3>Titre du défis</h3>
						<p>Créer le 1 mars 2021</p>
						{# <p>Créer le {{ app.challenge.createdAt }} </p> #}
						<p>Accepter le</p>
						{# <p>Accepter le {{ app.challenge.dateValidation }}</p> #}
					</div>
					<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut pretium pretium tempor. Ut eget imperdiet neque. In volutpat
					</p>
				</div>
				<p>Nombre de point mis en jeux : 10 xp</p>
				{# <p>Nombre de point mis en jeux : {{ app.challenge.xpWinner }}</p> #}
			</article>
			<!-- fin défis -->
		</section>

		<section>
			<!-- progression -->
			<article class="profil_progression">
				<h2 class="profil_h2">progression</h2>
				<img class="profil_progression__niveau" src="{{ asset('uploads/svg/level.svg') }}" alt="symbol_niveau">
				<p>Niveau 6</p>
				<div class="profil_niveau">
					<p>Prochain niveau</p>
					<p>07/28 xp</p>
				</div>
				<label for="file"></label>
				<progress id="file" max="100" value="25">25%</progress>
			</article><!--fin progression  -->
			<!-- bouton créer -->
			<button class="profil_bouton__creer">
				<a href="{{ path('challenge_new') }}">créer un défi</a>
			</button>
			<button class="profil_bouton__creer">
				<a href="{{ path('event_new') }}">créer un événement</a>
			</button>
			<!-- fin bouton créer -->
		</section>
	</main>
	<!-- fin du corps -->
	{% endblock %}
