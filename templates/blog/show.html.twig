{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Contents</th>
                <td>{{ blog.contents }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ blog.picture }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ blog.createdAt ? blog.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Sponsors</th>
                <td>{{ blog.sponsors }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ blog.category }}</td>
            </tr>
            <tr>
                <th>UserId</th>
                <td>{{ blog.userId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('blog_index') }}">back to list</a>

    <a href="{{ path('blog_edit', {'id': blog.id}) }}">edit</a>

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
