{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Contents</th>
                <td>{{ event.contents }}</td>
            </tr>
            <tr>
                <th>DateEvents</th>
                <td>{{ event.dateEvents ? event.dateEvents|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CategoriesEvents</th>
                <td>{{ event.categoriesEvents }}</td>
            </tr>
            <tr>
                <th>MemberPlayers</th>
                <td>{{ event.memberPlayers }}</td>
            </tr>
            <tr>
                <th>XpEvents</th>
                <td>{{ event.xpEvents }}</td>
            </tr>
            <tr>
                <th>UserId</th>
                <td>{{ event.userId }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('event_index') }}">back to list</a>

    <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
